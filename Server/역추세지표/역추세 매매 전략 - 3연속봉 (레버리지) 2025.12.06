get_body_ratio(index) =>
    candle_high = high[index]
    candle_low = low[index]
    candle_open = open[index]
    candle_close = close[index]

    total_range = candle_high - candle_low
    body_size = math.abs(candle_close - candle_open)

    total_range == 0 ? 100 : (body_size / total_range * 100)

is_volume_spike(index) =>
    if na(volume[index])
        false
    else
        avg_volume = ta.sma(volume, volume_avg_length)
        volume[index] > avg_volume * volume_spike_multiplier

is_spike_candle(index) =>
    if not use_spike_filter
        false
    else
        body_ratio = get_body_ratio(index)
        vol_spike = is_volume_spike(index)
        body_ratio > max_body_ratio and vol_spike

